<body>
    <div class="container">
        <header>
            <h1>DreamScape AI</h1>
            <p class="subtitle">Multi-traditional dream interpretation powered by symbolic analysis</p>
        </header>
        
        <div class="app-container">
            <div class="card">
                <div class="card-header">
                    <h2>Describe Your Dream</h2>
                </div>
                <div class="card-body">
                    <div id="error-message" class="error">
                        Please enter your dream description to interpret
                    </div>
                    <textarea id="dream-text" placeholder="I was climbing a mountain when I encountered a dog near water...">I was with friends passing a wedding when I saw a personal enemy among guests. The groom appeared with his head newly shaved, looking unhappy as he walked away.</textarea>
                    <button id="interpret-btn" class="btn">
                        <i class="fas fa-crystal-ball"></i> Interpret Dream
                    </button>
                    
                    <div class="watermark">
                        Powered by DreamScape AI • Advanced Symbolic Analysis
                    </div>
                </div>
            </div>
            
            <div class="card">
                <div class="card-header">
                    <h2>Dream Interpretation</h2>
                </div>
                <div class="card-body">
                    <div id="results-container">
                        <div class="no-results">
                            <i class="fas fa-cloud"></i>
                            <p>Enter your dream and click "Interpret" to see analysis</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // DREAM INTERPRETATION ENGINE
        class DreamInterpreter {
            constructor() {
                this.symbolDB = {
                    "wedding": {
                        meaning: "New beginnings, commitments, or unions",
                        traditions: {
                            "Hinduism": "Represents sacred samskara (rite of passage) for spiritual growth. Dreaming of a disrupted wedding suggests compromised commitments in your waking life.",
                            "Islam": "Symbolizes completion of faith and social responsibilities. An interrupted ceremony warns of fitna (trial) in relationships.",
                            "Kabbalah": "Manifestation of Tiferet (beauty) in the sefirotic tree. A failing wedding indicates disrupted brit (covenant).",
                            "Ancient Egyptian": "Mirrors the Isis-Osiris union. A troubled ceremony signifies isfet (disorder) triumphing over ma'at (balance).",
                            "Miller": "New ventures ahead (#1,114). A disrupted wedding predicts exposure of deception in close relationships."
                        }
                    },
                    "shaved head": {
                        meaning: "Radical transformation or sacrifice",
                        traditions: {
                            "Buddhism": "Renunciation of ego and worldly attachments. Forced shaving reflects pabbajja (renunciation) compelled by suffering.",
                            "Christianity": "Humility before divine will (1 Corinthians 11:14). An unwilling shave signifies grace rejected.",
                            "Ancient Egyptian": "Initiation into Osirian mysteries. A groom's shaved head represents Osiris' desecration.",
                            "Jungian Psychology": "Symbolizes capitis deminutio (diminished status). Represents sacrificed persona during life transitions.",
                            "Miller": "Radical change of status (#7,883). Indicates humiliating failure after personal sacrifice."
                        }
                    },
                    "personal enemy": {
                        meaning: "Unresolved conflict or shadow aspect",
                        traditions: {
                            "Jungian Psychology": "Projected shadow archetype requiring integration. Seeing an enemy in sacred space indicates active avoidance.",
                            "Taoism": "Imbalance of yin-yang energies. An enemy's presence reveals disruptive qi patterns.",
                            "Sufism": "Test of patience (sabr) from divine. An enemy at celebrations signifies barakah (blessing) violation.",
                            "African Traditional": "Represents obayi (witchcraft) or sunsum (spirit) pollution. Requires apɛtɛ purification ritual.",
                            "Miller": "Betrayal in trusted circles (#3,229). Predicts toxic interference in relationships."
                        }
                    },
                    "abandoned ceremony": {
                        meaning: "Broken commitments or failed expectations",
                        traditions: {
                            "Kabbalah": "Disrupted brit (covenant) in Malkuth. Signifies severed Netzach-Keter connections requiring tikkun.",
                            "Hinduism": "Interrupted dharma (cosmic duty). Suggests aborted spiritual responsibilities.",
                            "Christian Mysticism": "Represents rejected grace. Symbolizes the 'wedding supper of the Lamb' abandoned.",
                            "Native American": "Broken tribe unification. Signifies buried warrior identity causing disruption.",
                            "Miller": "Broken agreements (#9,227). Warns of public embarrassment from failed commitments."
                        }
                    },
                    "walking away": {
                        meaning: "Avoidance, transition, or departure",
                        traditions: {
                            "Taoism": "Wu wei (non-action) in motion. Signifies natural withdrawal from unbalanced situations.",
                            "Buddhism": "Teaching of anicca (impermanence) in relationships. Conscious departure from suffering.",
                            "Stoicism": "Virtuous retreat from uncontrollable circumstances. Exercising wisdom in disengagement.",
                            "Miller": "Reversed fortunes (#6,892). Predicts positive outcomes from strategic withdrawal."
                        }
                    }
                };
            }

            interpret(dreamDescription) {
                const symbols = this.extractSymbols(dreamDescription);
                const interpretation = {
                    symbols: [],
                    composite: "",
                    actions: []
                };

                // Process each symbol
                symbols.forEach(symbol => {
                    if (this.symbolDB[symbol]) {
                        const tradInterpretations = [];
                        
                        for (const [tradition, meaning] of Object.entries(this.symbolDB[symbol].traditions)) {
                            tradInterpretations.push({
                                tradition,
                                meaning
                            });
                        }

                        interpretation.symbols.push({
                            symbol,
                            meaning: this.symbolDB[symbol].meaning,
                            traditions: tradInterpretations
                        });
                    }
                });

                // Generate composite interpretation
                interpretation.composite = this.generateComposite(symbols);
                
                // Generate actionable steps
                interpretation.actions = this.generateActions(symbols);
                
                return interpretation;
            }

            extractSymbols(text) {
                const foundSymbols = [];
                const normalizedText = text.toLowerCase();
                
                // Check all symbols
                for (const symbol in this.symbolDB) {
                    if (normalizedText.includes(symbol)) {
                        foundSymbols.push(symbol);
                    }
                }
                
                // Additional logic for related terms
                if (normalizedText.includes("groom") && !foundSymbols.includes("wedding")) {
                    foundSymbols.push("wedding");
                }
                
                if (normalizedText.includes("leaving") && !foundSymbols.includes("walking away")) {
                    foundSymbols.push("walking away");
                }
                
                return foundSymbols.length > 0 ? foundSymbols : ["significant transition"];
            }

            generateComposite(symbols) {
                const composites = {
                    "wedding+shaved head+personal enemy": "Forced transformation due to toxic interference in important commitments. Reveals a 'shadow invasion' of sacred life transitions requiring purification.",
                    "wedding+personal enemy+walking away": "Toxic presence causing abandonment of commitments. Signifies necessary withdrawal from compromised situations to preserve integrity.",
                    "shaved head+abandoned ceremony+personal enemy": "Humiliating failure after sacrifice due to external sabotage. Warns of betrayal during vulnerable transformations.",
                    "default": "Significant life transition requiring careful navigation. The dream reveals unconscious processing of recent changes requiring conscious integration."
                };
                
                const symbolKey = symbols.join('+');
                return composites[symbolKey] || composites["default"];
            }

            generateActions(symbols) {
                const actions = [];
                
                // Always include these actions
                actions.push({
                    icon: "📆",
                    title: "Timeline Watch",
                    description: "Note significant events in next 28 days (one lunar cycle). Dreams often precede major transitions.",
                    tradition: "Ancient Egyptian Timekeeping"
                });
                
                actions.push({
                    icon: "📓",
                    title: "Dream Journaling",
                    description: "Record your dreams for 7 consecutive mornings. Look for recurring symbols and patterns.",
                    tradition: "Jungian Psychology"
                });
                
                // Symbol-specific actions
                if (symbols.includes("personal enemy")) {
                    actions.push({
                        icon: "🕵️",
                        title: "Shadow Work",
                        description: "Journal for 10 minutes about people triggering strong reactions in you. Ask: 'What does this reveal about myself?'",
                        tradition: "Jungian Psychology"
                    });
                }
                
                if (symbols.includes("wedding")) {
                    actions.push({
                        icon: "🔮",
                        title: "Commitment Ritual",
                        description: "Light two candles and tie their wicks together while stating intentions for your current commitments.",
                        tradition: "Universal Symbolism"
                    });
                }
                
                if (symbols.includes("shaved head")) {
                    actions.push({
                        icon: "✨",
                        title: "Renewal Practice",
                        description: "Perform a symbolic release: write what needs transformation on paper and safely burn it.",
                        tradition: "Taoist Alchemy"
                    });
                }
                
                return actions;
            }
        }

        // DOM Elements
        const dreamInput = document.getElementById('dream-text');
        const interpretBtn = document.getElementById('interpret-btn');
        const resultsContainer = document.getElementById('results-container');
        const errorMessage = document.getElementById('error-message');
        
        // Initialize interpreter
        const interpreter = new DreamInterpreter();
        
        // Display functions
        function showError(message) {
            errorMessage.textContent = message;
            errorMessage.style.display = 'block';
            setTimeout(() => {
                errorMessage.style.display = 'none';
            }, 5000);
        }
        
        function showLoading() {
            resultsContainer.innerHTML = `
                <div class="loading">
                    <i class="fas fa-spinner"></i>
                    <p>Analyzing dream symbols across traditions...</p>
                    <p>This may take a few moments</p>
                </div>
            `;
        }
        
        function displayInterpretation(interpretation) {
            let html = `
                <div class="interpretation-section">
                    <h2>Symbolic Analysis</h2>
            `;
            
            if (interpretation.symbols.length > 0) {
                interpretation.symbols.forEach(symbolData => {
                    html += `
                        <div class="symbol-card fade-in">
                            <h3>${symbolData.symbol.charAt(0).toUpperCase() + symbolData.symbol.slice(1)}</h3>
                            <p><strong>Meaning:</strong> ${symbolData.meaning}</p>
                            <div class="tradition-list">
                    `;
                    
                    symbolData.traditions.forEach(trad => {
                        html += `
                            <div class="tradition-item">
                                <div class="tradition-name">
                                    <i class="fas fa-star"></i>
                                    ${trad.tradition}
                                </div>
                                <p>${trad.meaning}</p>
                            </div>
                        `;
                    });
                    
                    html += `
                            </div>
                        </div>
                    `;
                });
            } else {
                html += `<p>No significant symbols detected in your dream</p>`;
            }
            
            html += `
                </div>
                
                <div class="composite-section fade-in">
                    <h3 class="composite-title">Composite Meaning</h3>
                    <p>${interpretation.composite}</p>
                </div>
                
                <div class="interpretation-section">
                    <h2>Recommended Actions</h2>
            `;
            
            if (interpretation.actions.length > 0) {
                interpretation.actions.forEach(action => {
                    html += `
                        <div class="action-card fade-in">
                            <div class="action-icon">${action.icon}</div>
                            <div class="action-content">
                                <div class="action-title">${action.title}</div>
                                <p>${action.description}</p>
                                <div class="action-tradition">${action.tradition}</div>
                            </div>
                        </div>
                    `;
                });
            }
            
            html += `</div>`;
            
            resultsContainer.innerHTML = html;
        }
        
        // Event listeners
        interpretBtn.addEventListener('click', () => {
            const dreamText = dreamInput.value.trim();
            if (!dreamText) {
                showError('Please describe your dream first');
                return;
            }
            
            if (dreamText.split(/\s+/).length < 5) {
                showError('Please describe your dream in more detail (at least 5 words)');
                return;
            }
            
            // Show loading state
            showLoading();
            
            // Simulate processing delay (in real app, this would be an API call)
            setTimeout(() => {
                try {
                    const interpretation = interpreter.interpret(dreamText);
                    displayInterpretation(interpretation);
                } catch (error) {
                    showError('Error interpreting dream. Please try again.');
                    console.error('Interpretation error:', error);
                }
            }, 2000);
        });
        
        // Initialize with sample interpretation
        interpretBtn.click();
    </script>
</body>
</html>